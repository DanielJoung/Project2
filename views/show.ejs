<%- include("./partials/header.ejs") %> 

<div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128">
          <img src="<%= wine.img %> " alt="Image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <strong><%=wine.wineName%> </strong> <small><%=wine.years%>       </small>
            <span class="showPrice">$<%= wine.price %>  </span>
            <br>
          </p>
          <p><strong>Wine Note</strong></p>
          <%= wine.desc %> 
        </div>
      </div>
    </article>
  </div>
  <div class="columns">
    <div class="column">
      <form action="/find-wine/<%= wine.id %>/edit">
        <button class="button is-success">
          <span class="icon is-small">
            <i class="fas fa-check"></i>
          </span>
          <span>Edit</span>
        </button>
      </form>
    </div>
    <div class="column">
      <form action="/find-wine/<%= wine.id %>?_method=DELETE" method="POST">
        <button class="button is-danger is-outlined">
          <span>Delete</span>
          <span class="icon is-small">
            <i class="fas fa-times"></i>
          </span>
        </button>    
      </form>
    </div>
  </div>




<%- include("./partials/footer.ejs") %> 